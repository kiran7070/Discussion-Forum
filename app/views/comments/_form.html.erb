<body>
<%= form_with model: [@discussion,@comment] do |form| %>

    <div>
        <%= form.label :username %><br>
        <%= form.text_field :username %>
        <% comment.errors.full_messages_for(:username).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

  <div>
    <%= form.label :comment %><br>
    <%= form.text_field :comment %>
    <% comment.errors.full_messages_for(:comment).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <p><button><%= form.submit "CREATE COMMENT" %></button></p>
  </div>
<% end %>
</body>
